<link type=”text/css” rel=”stylesheet” href="login.css"/>
<font face="Sans-serif" color="white" >
 <body style="background-color: #C0392B">
   <center><%= image_tag("login.png", height: '40', width: '160', style: "padding-bottom: 45px; padding-top: 45px;") %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field" id="email_entry" autocomplete="off" style="font-size: 100%; width: 80%; height: 50px; text-align: center; >
    <%= f.label :email, :style => "margin:20px;" %><br/>
    <%= f.email_field :email, autofocus: true, :style => "height: 30px;" "width:400px; margin:20px" %>
  </div>
  
  <div class="field" id="password_entry">
    <%= f.label :password, :style => "margin:20px;" %> <br/>
    <%= f.password_field :password, autocomplete: "off", :style => "height: 30px;" "width:400px; margin:20px;"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions" class ="log_in">
    <%= f.submit "Log in", :style => "height: 60px;" "width:100 px;" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
  </center>
  </font>